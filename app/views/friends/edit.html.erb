<div class="card">
  <div class="card-header">
    <h1>Edit Friend</h1>
  </div>
  <div class="card-body">
    <%= render "form", friend: @friend %>
    <br>

    <div>
     <%= link_to "Show", @friend, class: "btn btn-secondary" %>
     <%= link_to "Back", friends_path, class: "btn btn-dark" %>
     <%= link_to "Delete", @friend, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
